@model NGX.Web.Areas.HotelBookingDomain.Models.DetailsModel
@using guestACCESS.DataAccess.Entity
@using guestACCESS.Kernel.VacencyServices;
@{ 
    UnitAvailable uA = new UnitAvailable();
    var InvdropdownList = uA.GetListOfInvType().Select(n => new SelectListItem { Text = n, Value = n }).ToList();
    var currentDate = DateTime.Now;
}

<link href="~/Content/assets/plugins/toast-master/css/jquery.toast.css" rel="stylesheet" />

<style>
    .goog-te-gadget .goog-te-combo {
        margin: 1.5rem 0;
    }

    .goog-te-gadget .goog-te-combo {
        color: #555;
    }

    select.goog-te-combo {
        border: 1px solid #ddd;
        border-radius: 4px;
        width: 100%;
        padding: 0;
        position: absolute;
        right: 5px;
        top: 8px;
        width: 40%;
        background-color: #fff;
    }
    @@media only screen and (min-width: 990px) {
        select.goog-te-combo {
            width: 30%;
            border: 1px solid #ddd;
            top: 10px;
            border-radius: 4px;
            background-color: #fff;
        }

        .goog-te-gadget {
            margin: 1rem 0;
            color: transparent !important;
            padding: 1rem 0;
        }
    }

    @@media (max-width: 767px) {
        .header {
            height: 90px;
        }
    }

    .content{
        position: absolute;
        width: 100%;
    }

    .form-cn .form-search{
        margin-top: 10px;
        margin-bottom: 15px;
    }

    .form-search .clearfix{
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

    /* .form-hotel .field-destination{
        width: 400px;
    } */

    .form-search .clearfix > div {
        padding: 0 0.5rem;
    }
    .form-cn h2{
        text-align: center;
    }

    .dottedSelect {
        width: 100%;
        border: 2px dotted;
        border-top: none;
        border-right: 0;
        border-left: 0;
        font-weight: 600;
    }

    .check-box {
        margin: auto;
        width: 200px;
        padding: 1px;
        text-align: center;
        margin-top: 1.5rem;
    }

    .check-box > input {
        margin: 0.85rem;
    }

    #dateFrom{
        font-size: 1.6rem;
    }

    .form-search .form-field .field-input{
        border-top: none;
        border-right: 0;
        border-left: 0;
        border-bottom: 2px dotted #4db74f;
    }

    @@media only screen and (min-width: 1650px){
        .banner {
            min-height: 80vh;
        }
    }
    @@media only screen and (min-width: 2560px){
        .banner {
            min-height: 60vh;
        }
    }
     @@media only screen and (max-width: 991px){
        .form-hotel .form-search .field-destination{
            width: 300px;
        }
           .banner{
             padding-bottom: auto;
         }
     }

    @@media only screen and (max-width:667px){
        .banner{
            min-height: 65vh;
        }

        .form-hotel .form-search .field-destination{
            width: 250px;
        }
        .check-box{
             max-width: 200px;
        }

        footer .logo-foter img{
             width: 50%;
         }

    }

    @@media only screen and (max-width:767px){
        .tabs-cat .cate-item {
             height: 80px;
         }
        .cate-item .active{
             margin-top: 0;
         }
     }

    @@media only screen and (max-width:667px){
        .form-hotel .form-search .field-date,
        .form-hotel .form-search .field-destination{
            width: 100%;
        }
    }

    @@media (max-width: 390px){
          .check-box{
              width: 100%;
            }
            .light-logo{
                width: 180px;
            }
     }

    .cate-item.active{
         padding: 1rem;
     }

     .awe-search{
        cursor: pointer!important;
     }

