</style>
<!--Banner-->
<section class="banner">

    <!--Background-->
    <div class="bg-parallax bg-1"></div>
    <!--End Background-->

    <div class="container">
        <!-- Banner Content -->
        <div class="banner-cn">
            <!-- End Tabs Cat -->
            <!-- Tabs Content -->
            <div class="tab-content">
                <!-- Search Hotel -->
                <div class="form-cn form-hotel tab-pane active in" id="form-hotel">
                    <div class="row">
                        <h2>Where would you like to go?</h2>

                    </div>
                    <div class="form-search clearfix">
                        @using (Html.BeginForm("HotelSearch", "Hotel", new { area = "HotelBookingDomain" }, FormMethod.Get, new { id = "hotelSearchForm" }))
                        {

                            <div class="check-box" style="width: auto">
                                <label>
                                    Show available dates
                                </label>
                                <input type="checkbox" id="iddatesAvailable" class="datesAvailable" />
                            </div>


                            <div class="form-search clearfix">
                                <div class="form-group col-md-6 mb-4 form-field field-date">
                                    @Html.DropDownList("InvDropdown", (IEnumerable<SelectListItem>)InvdropdownList, "Select Weeks", new { @style = "width:100%; font-weight: normal; padding: 0.8rem", @class = "dottedSelect" })
                                </div>

                                <div class="form-group col-md-6 mb-4 dest">
                                <span class="form-control selection">
                                    @* <label for="destination"><span>Destination:</span> Country, City</label> *@
                                    @* <select class="select2-selection select2-selection--single form-control" id="destination" name="destination" style="" required></select> *@
                                    <span class="select2-selection select2-selection--single" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="0" aria-labelledby="select2-Destination-container">
                                    <span class="select2-selection__rendered" id="select2-Destination-container"><span class="select2-selection__placeholder">Destination</span></span>
                                    <span class="select2-selection__arrow" role="presentation"><b role="presentation"></b></span></span> 
                                    </span>
                                </div>

                                @* <div id="drpDown" class="form-search clearfix">
                                    <div class="form-field field-destination">
                                        <select id="chkDates" class="form-control dottedSelect" name="availableDates" style="width:100%;"><option value="">--Select--</option></select>
                                    </div>
                                </div> *@

                                    <div class="form-group col-md-6 mb-4 form-field field-date">
                                    <label>Check In Date</label>
                                        @Html.TextBox("Available from", null, "{0:" + SharedLib.Misc.DateTimeFormatter.DefaultStyle + "}", new { @class = "form-control", autocomplete = "off", min = SharedLib.Misc.DateTimeFormatter.ConvertToString(currentDate, "", SharedLib.Misc.DateTimeFormatter.Style9), type = "date" })
                                    </div>
                                    
                                    <div class="form-group col-md-6 mb-4 form-field field-date">
                                    <label>Check Out Date</label>
                                        @Html.TextBox("Available to", null, "{0:" + SharedLib.Misc.DateTimeFormatter.DefaultStyle + "}", new { @class = "form-control", autocomplete = "off", min = SharedLib.Misc.DateTimeFormatter.ConvertToString(currentDate.AddDays(1), "", SharedLib.Misc.DateTimeFormatter.Style9), type = "date" })
                                    </div>

                                <div class="form-submit text-center">
                                   <button type="submit" id="btnhotelPlanner" class="btn-danger" style="width: 10rem; border: none;">Search</button>
                                </div>

                            </div>

                        }
                    </div>
                </div>


            </div>
            <!-- End Tabs Content -->

        </div>
        <!-- End Banner Content -->

    </div>

</section>


@section scripts{
    <script src="~/Content/assets/plugins/toast-master/js/jquery.toast.js"></script>
    <script src="~/Content/PageScripts/HotelBookingDomain/index.js"></script>
    <script>
        $(function () {
            var hotelSearch = new HotelIndex();
            hotelSearch.dmcId = '@Model.DMCId'
            hotelSearch.getList = '@Url.Action("GetUnits", "Hotel")';
            hotelSearch.getDatesUrl = '@Url.Action("GetDates", "Hotel")';
            hotelSearch.init();

        });
    </script>

}

